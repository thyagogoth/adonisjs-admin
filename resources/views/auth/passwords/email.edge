<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>{{ config.title }} </title>
	<meta name="viewport" content="width=device-width, initial-scale=1">

	{{ style('../plugins/fontawesome-free/css/all.min.css') }}
	{{ style('https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css') }}
	{{ style('../plugins/icheck-bootstrap/icheck-bootstrap.min.css') }}
	{{ style('../dist/css/adminlte.min.css') }}
	{{ style('https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700') }}

</head>
<body class="hold-transition login-page">
	<div class="login-box">
		<div class="login-logo">
			<a href="{{ route('/') }}"><b>Painel de </b>controle</a>
		</div>
		<!-- /.login-logo -->
		<div class="card">
			<div class="card-body login-card-body">
				<p class="login-box-msg">
					Esqueceu a senha? Não se preocupe!<br/>
					Vamos gerar uma novinha pra você.
				</p>

				@include('includes.notification')

				<form action="{{ route('/password/email') }}" method="post">

					{{ csrfField() }}

					<div class="input-group mb-3">
						<input
							type="email"
							class="form-control {{ hasErrorFor('email') ? 'text-danger' : '' }}"
							placeholder="E-mail"
							name="email"
							value="{{ old('email', '') }}"
							required
						/>
						<div class="input-group-append">
							<div class="input-group-text">
								<span class="fas fa-envelope"></span>
							</div>
						</div>
					</div>
					{{ elIf('<small class="text-danger">$self</small>', getErrorFor('email'), hasErrorFor('email')) }}

					<div class="row">
						<div class="col-12">
							<button type="submit" class="btn btn-primary btn-block">Solicitar nova senha</button>
						</div>
					</div>

				</form>

				<p class="mt-3 mb-1">
					<a href="{{ route('/login') }}">Login</a>
				</p>
			</div>
			<!-- /.login-card-body -->
		</div>
	</div>
	<!-- /.login-box -->

	{{ script('../plugins/jquery/jquery.min.js') }}
	{{ script('../plugins/bootstrap/js/bootstrap.bundle.min.js') }}
	{{ script('../dist/js/adminlte.min.js') }}

</body>
</html>
